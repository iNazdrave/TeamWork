<Page x:Class="Alpha_Records_WPF.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alpha_Records_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageLogin">


    <StackPanel>
        <TextBlock Text="Mail for BgCoder and in.thecamp:"/>
        <TextBox x:Name="mail"/>

        <TextBlock Text="BgCoder Password"/>
        <PasswordBox x:Name="bgcoder_pass"/>

        <TextBlock Text="in.thecamp Password"/>
        <PasswordBox x:Name="inthecamp_pass"/>

        <Button 
            Content="Login"
            Click="Login_Button_Click"/>
    </StackPanel>
</Page>
